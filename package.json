{
	"name": "monorepo-pnpm-nuxt",
	"version": "1.0.0",
	"description": "monorepo for nuxt",
	"main": "index.js",
	"scripts": {
		"init": "sh ./scripts/shell/init.sh --all",
		"serve": "node scripts/build/build.cjs",
		"preview": "node scripts/build/build.cjs -p",
		"build": "node scripts/build/build.cjs -b",
		"generate": "node scripts/build/build.cjs -g",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"color": "^4.2.3",
		"commander": "^12.0.0",
		"commitizen": "^4.3.0",
		"commitlint-config-monorepo": "^2.0.2",
		"conventional-changelog-cli": "^2.2.2",
		"conventional-changelog-custom-config": "^0.3.1",
		"cz-lerna-changelog": "^2.0.3",
		"enquirer": "^2.4.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-define-config": "^2.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-vue": "^9.26.0",
		"husky": "^9.0.11",
		"lerna": "^3.22.1",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"cross-env": "^7.0.3",
		"nuxt": "^3.11.2",
		"vue": "^3.4.27",
		"vue-router": "^4.3.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bin-K/monorepo-pnpm-nuxt.git"
	},
	"changelog": {
		"bugsUrl": "https://github.com/bin-K/monorepo-pnpm-nuxt/issues/",
		"authorName": true,
		"authorEmail": false
	},
	"config": {
		"commitizen": {
			"path": "./scripts/changelog/cz-lerna-changelog.cjs"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,vue}": [
			"eslint --ext .js,.jsx,.vue,.ts,.tsx  --fix  ./"
		]
	},
	"workspaces": [
		"nuxt/packages/**"
	],
	"lerna": {
		"packages": [
			"nuxt/packages/*"
		]
	}
}
